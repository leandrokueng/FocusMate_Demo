<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FocusMate.ViewModels"
             x:Class="FocusMate.Views.SettingsPage"
             Title="Einstellungen"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}">
    <ContentPage.BindingContext>
        <vm:SettingsViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="24" Spacing="16">
        <Grid ColumnDefinitions="*,Auto" Padding="0,8">
            <Label Text="Auto-Darkmode" TextColor="{AppThemeBinding Light=Black, Dark=White}" />
            <Switch IsToggled="{Binding AutoDarkMode}" />
        </Grid>

        <Grid ColumnDefinitions="*,Auto" Padding="0,8">
            <Label Text="Shake-Pause" TextColor="{AppThemeBinding Light=Black, Dark=White}" />
            <Switch IsToggled="{Binding ShakePause}" />
        </Grid>

        <Grid ColumnDefinitions="*,Auto" Padding="0,8">
            <Label Text="Fokus-Minuten" TextColor="{AppThemeBinding Light=Black, Dark=White}" />
            <Entry Text="{Binding FocusMinutes}" WidthRequest="80" Keyboard="Numeric" />
        </Grid>

        <Button Text="Speichern" Clicked="OnSaveClicked" />
    </VerticalStackLayout>
</ContentPage>
