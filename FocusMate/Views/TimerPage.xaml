<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FocusMate.ViewModels"
             x:Class="FocusMate.Views.TimerPage"
             Title="Timer"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}">

	<ContentPage.BindingContext>
		<vm:TimerViewModel />
	</ContentPage.BindingContext>

	<VerticalStackLayout Padding="24" Spacing="20">
		<Label Text="{Binding TimeText}" FontSize="64" HorizontalOptions="Center"
			   TextColor="{AppThemeBinding Light=Black, Dark=White}" />
		<Grid ColumnDefinitions="*,*" ColumnSpacing="16">
			<Button Text="START" Command="{Binding StartCommand}" Grid.Column="0"/>
			<Button Text="PAUSE" Command="{Binding PauseCommand}" Grid.Column="1"/>
		</Grid>
	</VerticalStackLayout>
</ContentPage>
